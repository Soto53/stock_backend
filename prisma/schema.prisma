generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:D@ta8as3@localhost:5432/bootcamp"
}

model Company {
  id             Int      @id @default(autoincrement())
  news_id        News[]
  stock_price    Float?
  symbol         String   @unique
  name           String?
  exchange       String?
  datetime       DateTime
  open           Float?
  high           Float?
  low            Float?
  close          Float?
  volume         Int?
  previous_close Float?
  change         Float?
  average_volume Int?
  figi_code      String?
}

model News {
  id          Int      @id @default(autoincrement())
  companyId   Int
  company     Company  @relation(fields: [companyId], references: [id])
  news_url    String
  image_url   String
  title       String
  text        String
  source_name String
  date        DateTime
  topics      String
  sentiment   String
  type        String
  tickers     String
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}
